# .env.example

# ============================================
# DATABASE (SUPABASE)
# ============================================

# Supabase connection URL
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase service role key (backend only, full access)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase anon key (frontend, RLS protected)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# ALGORITHM PROTECTION (CRITICAL)
# ============================================

# Secret for encrypting algorithm state
# ⚠️  NEVER commit this to Git
# ⚠️  Change in production
# ⚠️  This protects Thompson Sampling parameters, etc.
ALGORITHM_STATE_SECRET=your-super-secret-key-min-32-chars

# ============================================
# APPLICATION
# ============================================

APP_NAME=Samplit
VERSION=1.0.0
DEBUG=false
ENV=production

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# ============================================
# OPTIMIZATION SETTINGS
# ============================================

# Default strategy (adaptive, fast_learning, sequential)
DEFAULT_OPTIMIZATION_STRATEGY=adaptive

# Min samples before trusting results
MIN_SAMPLES_THRESHOLD=30

# Confidence threshold for recommendations
CONFIDENCE_THRESHOLD=0.95

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=INFO

# Sanitize logs (remove algorithm details)
SANITIZE_LOGS=true

# ============================================
# SECURITY
# ============================================

# CORS origins (comma separated)
CORS_ORIGINS=https://app.samplit.com,https://samplit.com

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================

# Sentry (error tracking)
SENTRY_DSN=

# Analytics
ANALYTICS_KEY=
