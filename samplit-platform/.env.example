# ============================================
# SAMPLIT PLATFORM - Environment Configuration
# ============================================

# App
APP_NAME=Samplit
ENVIRONMENT=development
DEBUG=true

# ============================================
# SUPABASE (copiar de supabase.com/dashboard)
# ============================================
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGc...  # Public key
SUPABASE_SERVICE_KEY=eyJhbGc...  # Secret key (NUNCA commitear)
SUPABASE_JWT_SECRET=tu-jwt-secret-aqui

# Database URL (Supabase lo provee)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# ============================================
# STRIPE (copiar de stripe.com/dashboard)
# ============================================
STRIPE_SECRET_KEY=sk_test_xxxxx  # Test key
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Price IDs (crear en Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=price_xxxxx
STRIPE_PRO_PRICE_ID=price_xxxxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxxxx

# Webhook secret
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ============================================
# SECURITY
# ============================================
# Secret para cifrar estado de algoritmos (min 32 chars)
ALGORITHM_STATE_SECRET=change-this-to-a-very-long-random-string-min-32-chars

# ============================================
# CORS
# ============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================
# URLS
# ============================================
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ============================================
# OPTIONAL SERVICES
# ============================================

# Mailgun (para emails reales)
MAILGUN_API_KEY=key-xxxxx
MAILGUN_DOMAIN=mg.yourdomain.com

# SendGrid (alternativa)
SENDGRID_API_KEY=SG.xxxxx

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# FEATURES (habilitar/deshabilitar)
# ============================================
ENABLE_FUNNEL_OPTIMIZATION=true
ENABLE_EMAIL_OPTIMIZATION=true
ENABLE_PAYMENTS=true
