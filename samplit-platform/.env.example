# ============================================
# SAMPLIT CONFIGURATION
# ============================================

# App
APP_NAME=Samplit
ENVIRONMENT=production
DEBUG=false

# ============================================
# SUPABASE (Database + Auth)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database Connection (Supabase provides this)
DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# ============================================
# SECURITY - ⚠️ CHANGE THESE IN PRODUCTION
# ============================================
# Secret for encrypting algorithm state (min 32 chars)
ALGORITHM_STATE_SECRET=your-very-long-secret-key-minimum-32-characters-change-in-production

# ============================================
# CORS (Configure for your domains)
# ============================================
CORS_ORIGINS=["https://app.samplit.com","https://samplit.com"]

# ============================================
# OPTIMIZATION ENGINE
# ============================================
OPT_DEFAULT_STRATEGY=adaptive
OPT_MIN_SAMPLES=30
OPT_CONFIDENCE_THRESHOLD=0.95
OPT_EXPLORATION_RATE=0.1

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_FUNNEL_OPTIMIZATION=true
ENABLE_EMAIL_OPTIMIZATION=true
ENABLE_PUSH_OPTIMIZATION=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
